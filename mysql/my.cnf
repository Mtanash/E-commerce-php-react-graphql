[mysqld]
# Set the MySQL server's default character set
character-set-server=utf8mb4

# Set the default collation for the MySQL server
collation-server=utf8mb4_unicode_ci

# Configure the MySQL server to use a specific timezone
default-time-zone=UTC

# Set the maximum allowed packet size for client/server communication
max_allowed_packet=64M

# Set the maximum number of connections allowed
max_connections=100

# Set the MySQL server's bind address (comment out to allow connections from all interfaces)
# bind-address=127.0.0.1

# Set the MySQL server's port (default is 3306)
# port=3306

# Enable query caching (uncomment to enable)
# query_cache_type=1
# query_cache_limit=2M
# query_cache_size=64M

# Set the default storage engine
default-storage-engine=InnoDB

# Enable the InnoDB buffer pool size (adjust according to your server's memory)
innodb_buffer_pool_size=512M
